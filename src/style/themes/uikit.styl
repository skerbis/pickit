// UIKit3 Theme for flatpickr
// Inspired by UIKit 3 design system
// https://getuikit.com/

$calendarBackground = #fff
$calendarBorderColor = #e5e5e5

$monthForeground = #333
$monthBackground = transparent

$weekdaysBackground = transparent
$weekdays_color = #999

$dayForeground = #666
$dayHoverBackground = #f8f8f8

$todayColor = #1e87f0
$today_fg_color = #1e87f0

$selectedDayBackground = #1e87f0
$selectedDayForeground = #fff

$disabled_day_color = #999
$disabled_border_color = transparent

@require "../flatpickr"

.flatpickr-calendar
	border-radius 0
	box-shadow 0 5px 15px rgba(0,0,0,0.08)
	border 1px solid $calendarBorderColor
	font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif

.flatpickr-months
	.flatpickr-prev-month,
	.flatpickr-next-month
		fill $monthForeground
		&:hover
			svg
				fill $todayColor

.flatpickr-current-month
	.flatpickr-monthDropdown-months
		appearance none
		-webkit-appearance none
		-moz-appearance none
		background transparent
		border none
		font-weight 400

span.flatpickr-weekday
	color $weekdays_color
	font-weight 500
	font-size 0.875rem

.flatpickr-day
	border-radius 500px
	color $dayForeground
	font-weight 400

	&.today
		border-color $todayColor
		color $today_fg_color
		&:hover,
		&:focus
			border-color $todayColor
			background $todayColor
			color #fff

	&.selected,
	&.startRange,
	&.endRange
		background $selectedDayBackground
		border-color $selectedDayBackground
		color $selectedDayForeground
		&:hover,
		&:focus
			background darken($selectedDayBackground, 5%)
			border-color darken($selectedDayBackground, 5%)

	&.inRange
		background lighten($selectedDayBackground, 35%)
		border-color lighten($selectedDayBackground, 35%)
		box-shadow -5px 0 0 lighten($selectedDayBackground, 35%), 5px 0 0 lighten($selectedDayBackground, 35%)

	&.disabled,
	&.prevMonthDay,
	&.nextMonthDay
		color $disabled_day_color
		&:hover
			background transparent
			border-color transparent

	&:hover:not(.disabled):not(.selected)
		background $dayHoverBackground
		border-color $dayHoverBackground

.flatpickr-time
	border-top 1px solid $calendarBorderColor

	input
		font-weight 400

.flatpickr-time-separator,
.flatpickr-am-pm
	font-weight 400
